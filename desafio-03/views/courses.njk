{% extends "layout.njk"%}

{% block head %}

    <title> Cursos - Rocketseat </title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}

    <h1>Cursos</h1>


    <section class="cards">

        {% for card in cards %}
        <div class="card" id="{{card.id}}">
            
            <div class="card__image">
                <img src="{{card.image}}" alt=" Imagem do curso {{cards.id}}">
            </div>
            <div class="content">
                <p>{{card.description}}</p>
            </div>
            <div class="card__info">
                <div class="modules">
                    <p>{{card.modules}}</p>
                </div>
                <div class="price">
                    <p>{{card.price}}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
    
    <script src="script.js"></script>

{% endblock %}